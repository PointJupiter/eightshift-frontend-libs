				"innerBlocks": [
					{
						"name": "eightshift-boilerplate/card",
						"attributes": {
							"cardCardImageUrl": "https://picsum.photos/400/400",
							"cardCardIntroContent": "Intro",
							"cardCardIntroSize": "small",
							"cardCardIntroColor": "light",
							"cardCardHeadingContent": "Heading",
							"cardCardParagraphContent": "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nam aliquam est id semper aliquet.",
							"cardCardButtonUse": false
						}
					}
				]
			}
		]
	},
	"hasInnerBlocks": true,
	"attributes": {
		"columnsAllowedBlocks": {
			"type": "array",
			"items": {
				"type": "string"
			},
			"default": [
				"eightshift-boilerplate/column"
			]
		},

		"columnsGutterLarge": {
			"type": "integer",
			"default": 30
		},
		"columnsGutterDesktop": {
			"type": "integer"
		},
		"columnsGutterTablet": {
			"type": "integer"
		},
		"columnsGutterMobile": {
			"type": "integer"
		},

		"columnsVerticalSpacingLarge": {
			"type": "integer",
			"default": 30
		},
		"columnsVerticalSpacingDesktop": {
			"type": "integer"
		},
		"columnsVerticalSpacingTablet": {
			"type": "integer"
		},
		"columnsVerticalSpacingMobile": {
			"type": "integer"
		}
	},
	"responsiveAttributes": {
		"columnsGutter": {
			"large": "columnsGutterLarge",
			"desktop": "columnsGutterDesktop",
			"tablet": "columnsGutterTablet",
			"mobile": "columnsGutterMobile"
		},
		"columnsVerticalSpacing": {
			"large": "columnsVerticalSpacingLarge",
			"desktop": "columnsVerticalSpacingDesktop",
			"tablet": "columnsVerticalSpacingTablet",
			"mobile": "columnsVerticalSpacingMobile"
		}
	},
	"options": {
		"columnsGutter": {
			"min": 0,
			"max": 100,
			"step": 10
		},
		"columnsVerticalSpacing": {
			"min": 0,
			"max": 100,
			"step": 10
		}
	},
	"variables": {
		"columnsVerticalSpacing": [
			{
				"inverse": true,
				"variable": {
					"columns-vertical-spacing": "calc((%value% / 16) * 1rem)"
				}
			}
		],
		"columnsGutter": [
			{
				"inverse": true,
				"variable": {
					"columns-gutter": "calc((%value% / 16) * 1rem)"
				}
			}
		]
	}
}
