{
	"componentName": "button",
	"title": "Button",
	"componentClass": "btn",
	"example": {
		"attributes": {
			"buttonContent": "This is a button",
			"buttonUrl": "https://infinum.github.io/eightshift-docs/",
			"buttonId": "custom ID",
			"buttonSize": "default",
			"buttonColor": "primary",
			"buttonWidth": "default",
			"buttonIsAnchor": false,
			"buttonIsLink": false,
			"buttonUse": true
		}
	},
	"attributes": {
		"buttonContent": {
			"type": "string",
			"seo": true
		},
		"buttonUrl": {
			"type": "string"
		},
		"buttonId": {
			"type": "string"
		},
		"buttonSize": {
			"type": "string",
			"default": "default"
		},
		"buttonColor": {
			"type": "string",
			"default": "primary"
		},
		"buttonWidth": {
			"type": "string",
			"default": "default"
		},
		"buttonIsAnchor": {
			"type": "boolean",
			"default": false
		},
		"buttonIsNewTab": {
			"type": "boolean",
			"default": false
		},
		"buttonAttrs": {
			"type": "array"
		},
		"buttonAriaLabel": {
			"type": "string"
		},
		"buttonIsLink": {
			"type": "boolean",
			"default": false
		},
		"buttonUse": {
			"type": "boolean",
			"default": true
		}
	},
	"options": {
		"buttonSize": [
			{
				"label": "Default",
				"value": "default"
			},
			{
				"label": "Big",
				"value": "big"
			}
		],
		"buttonWidth": [
			{
				"label": "Default",
				"value": "default"
			},
			{
				"label": "Block",
				"value": "block"
			}
		],
		"buttonColor": [
			"primary",
			"black"
		]
	},
	"variables": {
		"buttonColor": {
			"primary": [
				{
					"variable": {
						"button-color": "var(--global-colors-white)",
						"button-color-is-link": "var(--global-colors-primary)",
						"button-color-hover": "var(--global-colors-white)",
						"button-color-is-link-hover": "var(--global-colors-black)",
						"button-background-color": "var(--global-colors-primary)",
						"button-background-color-hover": "var(--global-colors-black)"
					}
				}
			],
			"black": [
				{
					"variable": {
						"button-color": "var(--global-colors-white)",
						"button-color-is-link": "var(--global-colors-black)",
						"button-color-hover": "var(--global-colors-white)",
						"button-color-is-link-hover": "var(--global-colors-primary)",
						"button-background-color": "var(--global-colors-black)",
						"button-background-color-hover": "var(--global-colors-primary)"
					}
				}
			]
		},
		"buttonSize": {
			"default": [
				{
					"variable": {
						"button-font-size": "0.8em",
						"button-line-height": "1.4"
					}
				},
				{
					"breakpoint": "tablet",
					"variable": {
						"button-font-size": "1em"
					}
				}
			],
			"big": [
				{
					"variable": {
						"button-font-size": "1em",
						"button-line-height": "1.4"
					}
				},
				{
					"breakpoint": "tablet",
					"variable": {
						"button-font-size": "1.2em"
					}
				}
			]
		},
		"buttonWidth": {
			"default": [
				{
					"variable": {
						"button-display": "inline-flex",
						"button-width": "auto"
					}
				}
			],
			"block": [
				{
					"variable": {
						"button-display": "flex",
						"button-width": "100%"
					}
				}
			]
		}
	}
}
