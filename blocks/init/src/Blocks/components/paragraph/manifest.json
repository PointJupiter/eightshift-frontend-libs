{
	"componentName": "paragraph",
	"title": "Paragraph",
	"componentClass": "paragraph",
	"example": {
		"attributes": {
			"paragraphContent": "This is paragraph",
			"paragraphSize": "default",
			"paragraphColor": "black",
			"paragraphUse": true
		}
	},
	"attributes": {
		"paragraphContent": {
			"type": "string",
			"seo": true
		},
		"paragraphSize": {
			"type": "string",
			"default": "default"
		},
		"paragraphColor": {
			"type": "string",
			"default": "black"
		},
		"paragraphUse": {
			"type": "boolean",
			"default": true
		}
	},
	"options": {
		"paragraphSize": [
			{
				"label": "Default (1em)",
				"value": "default"
			},
			{
				"label": "Small (0.8em)",
				"value": "small"
			}
		],
		"paragraphColor": [
			"black",
			"primary"
		],
		"pasteAllowTags": [
			"strong",
			"b",
			"i",
			"em",
			"span"
		]
	},
	"variables": {
		"paragraphSize": {
			"default": [
				{
					"variable": {
						"paragraph-font-size": "0.8em",
						"paragraph-line-height": "1"
					}
				},
				{
					"breakpoint": "tablet",
					"variable": {
						"paragraph-font-size": "1em"
					}
				}
			],
			"small": [
				{
					"variable": {
						"paragraph-font-size": "0.6em",
						"paragraph-line-height": "1"
					}
				},
				{
					"breakpoint": "tablet",
					"variable": {
						"paragraph-font-size": "0.8em"
					}
				}
			]
		},
		"paragraphColor": {
			"primary": [
				{
					"variable": {
						"paragraph-color": "var(--global-colors-primary)",
						"paragraph-link-color": "var(--global-colors-black)",
						"paragraph-link-color-hover": "var(--global-colors-light)"
					}
				}
			],
			"black": [
				{
					"variable": {
						"paragraph-color": "var(--global-colors-black)",
						"paragraph-link-color": "var(--global-colors-primary)",
						"paragraph-link-color-hover": "var(--global-colors-light)"
					}
				}
			]
		}
	}
}
